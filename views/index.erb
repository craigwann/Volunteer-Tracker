<h1>Welcome to the Project Volunteer Tracker app</h1>

<div class="container">


  <form action="/" method="post">
    <label for="title">Project Title:</label>
    <input id="title" name="title" type="text">

    <button type="submit">Create Project</button>
  </form>

  <% if @projects.any? %>
    <h3>Here are your projects:</h3>

    <ul>
      <% @projects.each() do |project| %>
        <li><a href="/projects/<%= project.id()%>"><%= project.title() %></a> </li>
      <% end %>
    </ul>

  <% else %>

      <p>There are no projects yet!</p>

  <% end %>


  <% if @volunteers.any?() %>
    <h3>Here are all the Volunteers in this project:</h3>

    <ul>
      <% @volunteers.each() do |volunteer| %>
        <li><a href="/volunteers/<%= volunteer.id()%>"><%= volunteer.name() %></a> </li>
      <% end %>
    </ul>

    <% else %>
      <p>There are no volunteers on this project!</p>
  <% end %>

</div>
